@using MCMDirect.Areas.Store.Models
@using MCMDirect.Models.DomainModel
@using MCMDirect.Models.DTOs
@model MCMDirect.Models.ViewModels.CartViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Cart</h2>
<table>
    <thead>
        <th>Product</th>
        <th>Price</th>
        <th>Qty</th>
    </thead>
    <tbody>
    @foreach (CartItem item in Model.List)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
        </tr>
    }
    </tbody>
</table>

<h1>@Model.Subtotal</h1>