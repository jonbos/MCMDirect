@model MCMDirect.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}
<style>
    #signin-box {
        width: 40%;
        background-color: white;
        border: 5px solid black;
        border-radius: 10px;
        position: center;
        top: 40%;
        padding: 3rem;
        margin-top: 8rem;
    }
</style>
<div id="signin-box" class="container">
    <form class="form-signin" method="post" asp-controller="Account" asp-action="LogIn">
        <div class="alert alert-primary" role="alert" asp-validation-summary="ModelOnly"></div>
        <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>
        <label asp-for="Email" class="sr-only">Email address</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required="" autofocus="">
        <label asp-for="Password" class="sr-only">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="">
        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe" type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-dark btn-block" type="submit">Sign in</button>
    </form>
</div>